{
  "include": ["./test/*.ts", "./src/**/*.ts","./lib/**/*.ts", "./types/**/index.d.ts", "./Type/**/*.ts"],
  "exclude": ["./node_modules/*"],
  "compilerOptions": {
    "target": "esnext",         /* es2018,es2019,es2020,esnext が適している */
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@Type/*": ["Type/*"],
    },
    "sourceMap": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,     /* 暗黙的な「any」型を許可。 */
    "noImplicitThis": true,     /* 暗黙的なthisの型推定を「禁止」。 */
    "skipLibCheck": true        /* Skip type checking all .d.ts files. */
  }
}
